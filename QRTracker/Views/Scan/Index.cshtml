    function ClickButton() {
        clearInterval(timer);

        $("#result").removeClass();
        $("#decoded").removeClass();
        $("#result").text("");
        $("#decoded").text("");
        $("#working").show();
        take_snapshot();
        return false;
    }
    

    

    function take_snapshot() {
        // take snapshot and upload to server
        //        document.getElementById('upload_results').innerHTML = '<h1>Uploading...</h1>';
        var roleId = $("#role").val();
        webcam.set_api_url("/Scan/Upload?role=" + roleId);
       
        webcam.snap();

    }
    
    
    function pad(n) { return ("0" + n).slice(-2); }

    function my_completion_handler(msg) {
        //        // extract URL out of PHP output

        var result = (msg);
        $("#result").html(result);
        $("#working").hide();
        webcam.reset();
        //UpdateTodayTable();


        if ($('#multiple').hasClass('active')) {
            timer = setInterval("ClickButton()", "3000");
        } else {
            $("#refresh").click();
        }

    }
    


    // работа с таблицей
    function initDataTables() {
        $('#history').dataTable({ sAjaxSource: '@Url.Action("GetStatuses", "Today")',
            fnRowCallback: function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                //4 -posted, 5- deleted
                if (aData[5]) {
                    nRow.className = "posted";
                }
                if (aData[6]) {
                    nRow.className = "deleted";
                }
                if (aData[5] && aData[6]) {
                    nRow.className = "deletedPosted";
                }
                return nRow;
            },
            "aaSorting": [[2, 'desc']],
            "aoColumns": [
            null,
            null,
            { "iDataSort": 3 },
            { "bVisible": false },
            null,
            null,
            null],
            bJQueryUI: true,
               bProcessing: true,

                "bScrollInfinite": false,
               "bScrollCollapse": false
              
            
        });
    }

   
    function UpdateTable() {

        var oTable = $('#history').dataTable();
